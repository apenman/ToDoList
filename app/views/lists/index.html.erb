<h1>To-Do Lists</h1>


<% if @lists.count > 0 %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'View Tasks', list_list_items_path(list) %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <h5>Nothing to do! Create a new to-do list!</h5>
<% end %>

<br>

<%= link_to 'New List', new_list_path %>
